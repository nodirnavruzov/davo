                        "type": "string",
                        "maxLength": 50
                      },
                      "phone": {
                        "type": "string",
                        "maxLength": 50
                      },
                      "hospital": {
                        "type": "string"
                      },
                      "doctor_type": {
                        "type": "integer"
                      }
                    }
                  }
                }
